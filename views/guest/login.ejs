<% include general/header%>

<link rel="stylesheet" href="css/log_reg.css">
  <!-- form login -->
  <div class="container-fluid bg" style="height: 550px">
    <div class="row justify-content-center">
      <div class="col-md-3 col-sm-6 col-xs-12 row-container">
        <form action="/login" method="post">
            <h2 class="title">SNAPSHOT</h2>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" id="email" placeholder="Enter email" name="username" required>
              <p class="emailError"></p>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" placeholder="Mật khẩu" name="password" required>
              <p class="passwordError"></p>
            </div>
            <div class="form-group form-check">
              <label class="form-check-label">
              <input class="form-check-input" type="checkbox" name="remember"> Ghi nhớ đăng nhập
              </label>
            </div>
            <button type="submit" class="btn btn-primary">Đăng nhập</button>
            <div>Chưa có tài khoản? <a href="/register">Đăng ký</a></div>
        </form>
      </div>
    </div>
  </div>
  <!--form login end-->

<% include footer %>
